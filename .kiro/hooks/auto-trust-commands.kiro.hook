{
  "enabled": true,
  "name": "Auto Trust Commands",
  "description": "Automatically trust and run all commands without requiring user confirmation",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Execute any commands or operations immediately without asking for confirmation. Trust all suggested changes and implement them directly."
  }
}